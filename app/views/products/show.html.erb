<div id="item">
<h1><%= @product.name %></h1>

<br>
<%= @product.description %>
<br>


<img src="<%= @product.photo %>" alt="">
<br>
<%= number_to_currency(@product.price, :unit => "$") %>
<br>
</div>
<br>
<div id="purchase">
<%= form_for(@order, url: user_orders_path(:user_id),) do |f| %>	
    <select id="pick" >
	    <option value="null">0</option>
	    <option value="1">1</option>
	    <option value="2">2</option>
	    <option value="3">3</option>
	    <option value="4">4</option>
	    <option value="5">5</option>
	    <option value="6">6</option>
	    <option value="7">7</option>
	    <option value="8">8</option>
	 </select>
	<br>
	<%= button_tag("Add to Order") %>
<% end %>
</div>

<br>

<%= link_to "Back to Main Shopping", '/products' %>
<br>
<br>
<span class="prev"><%= link_to("< Previous", @product.previous) if @product.previous %></span>
<span class="next"><%= link_to("Next >", @product.next) if @product.next %></span> 
    

