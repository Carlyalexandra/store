<div id="addcard">
<h1>Add a Card here</h1>

<%= form_for(@card, url: user_cards_path(@user)) do |f| %>
<div class="field">
    <%= f.label :Card_nickname %>
    <%= f.text_field :nickname%>
  </div>  
  <div class="field">
    <%= f.label :full_name_on_card %>
    <%= f.text_field :full_name %>
  </div>  
  <div class="field">
      <%= f.label :card_number, "Credit Card Number " %>
      <%= f.text_field :card_number %>
  </div>
  <div class="field">
      <%= f.label :security_code, "Security Code on Card (CVV)" %>
      <%= f.text_field :security_code %>
  </div>
  <div class="field">
    <%= f.label :card_month, "Card Expiration" %>
    <%= select_month nil, {add_month_numbers_true: true}, {name: "card[exp_month]", id: "card_month"}%>
    <%= select_year nil, {start_year: Date.today.year, end_year: Date.today.year+15}, {name: "card[exp_year]", id: "card_year"}%>
  </div>
  <div class="actions"><%= f.submit "Submit" %></div>
<% end %>
<br>
<hr>
<%= link_to "Back", :back %>
</div>